<robot name="bogson">

<link name="base">
  <visual>
    <origin xyz="0.0 0 0.0" rpy="0 0 0" />
    <geometry>
      <cylinder radius="0.0" length="0.0" />
    </geometry>
    <material name="green">
      <color rgba="0 1 0 1" />
    </material>
  </visual>
</link>

<link name="pierwszy">
  <visual>
    <origin xyz="0.0 0 0.5" rpy="0 0 0" />
    <geometry>
      <cylinder radius="1.0" length="1.0" />
    </geometry>
    <material name="magenta">
      <color rgba="1 0 1 1" />
    </material>
  </visual>
</link>

<joint name="base_to_pierwszy" type="fixed">
  <origin xyz="0 0 0" />
  <parent link="base"/>
  <child link="pierwszy"/>
</joint>

<link name="drugi">

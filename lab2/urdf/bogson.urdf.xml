      <color rgba="0 1 0 1" />
    </material>
  </visual>
</link>

<joint name="pierwszy_to_drugi" type="fixed">
  <origin xyz="0 0 0" />
  <parent link="pierwszy"/>
  <child link="drugi"/>
</joint>

<link name="trzeci">
  <visual>
    <origin xyz="0.0 0 4.5" rpy="0 0 0" />
    <geometry>
      <cylinder radius="3.0" length="3.0" />
    </geometry>
    <material name="magenta">
      <color rgba="1 0 1 1" />
    </material>
  </visual>
</link>

<joint name="drugi_to_trzeci" type="fixed">
  <origin xyz="0 0 0" />
  <parent link="drugi"/>
  <child link="trzeci"/>
</joint>

<link name="czwarty">
  <visual>
    <origin xyz="0.0 0 8.0" rpy="0 1.5 0" />
    <geometry>
      <cylinder radius="4.0" length="4.0" />
    </geometry>
    <material name="green">
      <color rgba="0 1 0 1" />
    </material>
  </visual>
</link>

<joint name="trzeci_to_czwarty" type="fixed">
